{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

      {
        "type": "node",
        "request": "launch",
        "name": "Single test",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
            "-r", "ts-node/register",
            "--timeout", "500000",
            "--colors",
            "${workspaceFolder}/test/search/*.ts"
        ],
        "internalConsoleOptions": "openOnSessionStart",
        "env": {
          "BASE_NODE_URL":"http://localhost:8080"
        }
      },
      {
        "type": "node",
        "request": "launch",
        "name": "All test",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
          "-u",
          "tdd",
          "--timeout",
          "999999",
          "--colors",
          "--require",
          "ts-node/register",
          "${workspaceFolder}/test/**/*.ts"
        ],
        "internalConsoleOptions": "openOnSessionStart",
        "env": {
          "BASE_NODE_URL":"http://localhost:8090"
        }
      },
      {
        "type": "node",
        "request": "launch",
        "name": "root test",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
          "-u",
          "tdd",
          "--timeout",
          "999999",
          "--colors",
          "--require",
          "ts-node/register",
          "${workspaceFolder}/test/*.ts"
        ],
        "internalConsoleOptions": "openOnSessionStart",
        "env": {
          "BASE_NODE_URL":"http://localhost:8080"
        }
      },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/Bitclave-Base.js"
        }
    ]
}
